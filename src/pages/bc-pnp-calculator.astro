---
import BaseLayout from "../layouts/BaseLayout.astro";
import CalculatorShell from "../components/CalculatorShell.astro";
import { calculatorContent } from "../i18n/calculator-content";

const title = "Free BC PNP Points Calculator | Check Your SIRS Score 2026";
const description =
  "BC PNP Calculator to assess your points for permanent residence under the BC PNP Skills Immigration Stream. Contact us for guidance today!";

// Comprehensive JSON-LD for Calculator + FAQ
const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    name: "BC PNP Points Calculator",
    description:
      "Calculate your British Columbia Provincial Nominee Program points instantly",
    url: "https://bcpnpcalculator.ca/bc-pnp-calculator",
    applicationCategory: "UtilityApplication",
    operatingSystem: "Any",
    browserRequirements: "Requires JavaScript. Modern browser recommended.",
    offers: {
      "@type": "Offer",
      price: "0",
      priceCurrency: "CAD",
    },
    featureList: [
      "Real-time BC PNP score calculation",
      "Detailed points breakdown by category",
      "Work experience scoring",
      "Education level points",
      "Language proficiency (CLB) scoring",
      "Hourly wage calculation",
      "Regional location bonus points",
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "HowTo",
    name: "How to Calculate Your BC PNP Points",
    description:
      "Step-by-step guide to calculate your British Columbia Provincial Nominee Program points",
    totalTime: "PT5M",
    step: [
      {
        "@type": "HowToStep",
        position: 1,
        name: "Enter Work Experience",
        text: "Enter your years of directly related work experience and indicate if you have Canadian experience or are currently working in BC",
      },
      {
        "@type": "HowToStep",
        position: 2,
        name: "Select Education Level",
        text: "Choose your highest completed credential (secondary, bachelor, master, etc.)",
      },
      {
        "@type": "HowToStep",
        position: 3,
        name: "Enter Language Proficiency",
        text: "Select your Canadian Language Benchmark (CLB) level from approved tests like IELTS or CELPIP",
      },
      {
        "@type": "HowToStep",
        position: 4,
        name: "Enter Hourly Wage",
        text: "Input your hourly wage from your BC job offer in CAD",
      },
      {
        "@type": "HowToStep",
        position: 5,
        name: "Select Job Location",
        text: "Choose the regional district where your BC job is located",
      },
      {
        "@type": "HowToStep",
        position: 6,
        name: "View Your Score",
        text: "Review your total BC PNP score out of 200 points with detailed breakdown",
      },
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: "https://bcpnpcalculator.ca",
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "BC PNP Calculator",
        item: "https://bcpnpcalculator.ca/bc-pnp-calculator",
      },
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: [
      {
        "@type": "Question",
        name: "What is a competitive BC PNP score?",
        acceptedAnswer: {
          "@type": "Answer",
          text: "Draw scores fluctuate based on the specific stream (Tech, Healthcare, Childcare). Generally, a score above 115 is highly competitive, while scores between 95-110 are often sufficient for targeted draws.",
        },
      },
      {
        "@type": "Question",
        name: "How often are BC PNP draws held?",
        acceptedAnswer: {
          "@type": "Answer",
          text: "BC typically conducts draws weekly, alternating between general draws and targeted draws for high-demand occupations like Tech, Healthcare, and Early Childhood Educators.",
        },
      },
      {
        "@type": "Question",
        name: "Can I improve my BC PNP score?",
        acceptedAnswer: {
          "@type": "Answer",
          text: "Yes. The most effective ways to boost your BC PNP calculator result include obtaining a higher hourly wage, improving your CLB language results, or choosing a job offer in a regional district outside of Metro Vancouver.",
        },
      },
      {
        "@type": "Question",
        name: "Does a high score guarantee an invitation to apply?",
        acceptedAnswer: {
          "@type": "Answer",
          text: "While our BC PNP score calculator provides a reliable estimate, an invitation to apply (ITA) depends on your profile meeting the minimum cutoff for the specific draw period.",
        },
      },
      {
        "@type": "Question",
        name: "What is the maximum BC PNP score?",
        acceptedAnswer: {
          "@type": "Answer",
          text: "The maximum possible score in the BC PNP points calculator is 200 points, distributed across five categories: Work Experience (40), Education (40), Language (40), Hourly Wage (55), and Regional Location (25).",
        },
      },
    ],
  },
];
---

<BaseLayout
  title={title}
  description={description}
  jsonLd={jsonLd}
  keywords="bc pnp calculator, bc pnp score calculator, bc pnp points calculator, calculate my bc pnp points, bcpnp score, pnp calculator, SIRS score calculator, BC PNP draw 2026, check my BC PNP score, bc pnp point calculator"
  lang="en"
>
  <!-- Calculator Onboarding & Trust Signals -->
  <section class="bg-gradient-to-b from-slate-50 to-white pt-12 pb-6 px-4 sm:px-6">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 bg-green-50 text-green-700 px-4 py-2 rounded-full text-sm font-bold mb-6 border border-green-100">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
