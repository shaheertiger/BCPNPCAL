const description =
    "Full breakdown of BC PNP costs in 2026. Learn about application fees, IELTS costs, ECA fees, medical exams, and total budget needed for BC Provincial Nominee Program.";
---

<BaseLayout title={title} description={description}>
    <article class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6">
        <div class="max-w-3xl mx-auto space-y-8">
            <header class="space-y-4 text-center">
