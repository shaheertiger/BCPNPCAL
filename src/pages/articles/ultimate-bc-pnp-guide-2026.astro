                            <tr>
                                <td class="px-4 py-3 font-semibold"
                                    >Initial Allocation</td
                                >
                                <td class="px-4 py-3">4,000</td>
                                <td class="px-4 py-3">5,254</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-3 font-semibold"
                                    >Final Allocation</td
                                >
                                <td class="px-4 py-3">6,214 (after top-ups)</td>
