---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Terms of Service - BC PNP Calculator";
const description = "Terms of Service for BC PNP Calculator. Read the terms and conditions for using our website and calculator tools.";
---

<BaseLayout title={title} description={description}>
  <article class="min-h-screen bg-slate-50 py-16 px-4 sm:px-6">
    <div class="max-w-3xl mx-auto">
      
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-black text-slate-900 tracking-tight mb-4">Terms of Service</h1>
        <p class="text-slate-500 text-sm">Last updated: January 2025</p>
      </header>

      <div class="prose prose-lg prose-slate max-w-none bg-white p-8 sm:p-12 rounded-[2rem] border border-slate-100 shadow-sm">
        
        <h2>Acceptance of Terms</h2>
        <p>
          By accessing and using BC PNP Calculator, you accept and agree to be bound by these Terms of Service. If you do not agree to these terms, please do not use our website.
        </p>

