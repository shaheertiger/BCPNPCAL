---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "BC PNP News - Latest Updates & Announcements";
const description = "Stay up-to-date with the latest British Columbia Provincial Nominee Program (BC PNP) news, draw results, policy changes, and program updates for 2026.";

const newsItems = [
  {
    date: "January 8, 2026",
    category: "Breaking",
    categoryColor: "red",
    title: "BC PNP Receives Only 5,254 Nominations for 2026",
    summary: "The federal government has allocated 5,254 nominations to BC PNP for 2026—significantly lower than the 9,000 requested by British Columbia. This represents a decrease from the 6,214 total nominations received in 2025.",
    link: "/articles/ultimate-bc-pnp-guide-2026"
  },
  {
    date: "January 7, 2026",
    category: "Program Update",
    categoryColor: "amber",
    title: "International Post-Graduate (IPG) Stream Officially Closes",
    summary: "The legacy BC PNP International Post-Graduate stream has officially closed as of January 7, 2026. New graduate streams (Bachelor's, Master's, Doctorate) were announced but remain suspended.",
    link: "/articles/bc-pnp-international-graduate-stream-2025"
  },
  {
    date: "January 5, 2026",
    category: "Express Entry",
    categoryColor: "blue",
    title: "Federal Express Entry PNP Draw: 574 ITAs at CRS 711",
    summary: "Immigration, Refugees and Citizenship Canada (IRCC) held a Provincial Nominee Program-targeted Express Entry draw, issuing 574 Invitations to Apply with a minimum CRS score of 711.",
    link: "/bc-pnp-draws"
  },
  {
    date: "December 18, 2025",
    category: "Allocation",
    categoryColor: "purple",
    title: "2026 Priorities to Be Announced in New Year",
    summary: "BC PNP has confirmed it is strategizing on how to best utilize the limited 2026 allocation. Official priorities—including potential sector focus on Healthcare and Tech—will be shared early 2026.",
    link: "/articles/ultimate-bc-pnp-guide-2026"
  },
  {
    date: "April 2025",
    category: "Suspension",
    categoryColor: "slate",
    title: "Student Streams Remain Indefinitely Suspended",
    summary: "Due to limited nomination allocations, the new Bachelor's, Master's, and Doctorate streams have been suspended since April 2025. There is no confirmed timeline for resumption.",
    link: "/articles/bc-pnp-international-graduate-stream-2025"
  }
];
---

<BaseLayout title={title} description={description}>
  <main class="min-h-screen bg-gradient-to-b from-slate-900 via-slate-800 to-slate-900">
    <!-- Hero Section -->
    <section class="relative py-20 px-4 sm:px-6 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-red-900/20 via-transparent to-transparent"></div>
      <div class="max-w-4xl mx-auto text-center relative z-10">
        <div class="inline-flex items-center px-4 py-2 rounded-full text-xs font-bold bg-red-500/20 text-red-400 uppercase tracking-widest mb-6 border border-red-500/30">
          <span class="w-2 h-2 bg-red-500 rounded-full mr-2 animate-pulse"></span>
          Live Updates
        </div>
        <h1 class="text-4xl md:text-6xl font-black text-white tracking-tight mb-6">
          BC PNP <span class="text-red-500">News</span>
        </h1>
        <p class="text-lg md:text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
          The latest updates, draw results, and policy changes for the British Columbia Provincial Nominee Program.
        </p>
      </div>
    </section>

    <!-- News Grid -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 pb-20">
      <div class="space-y-6">
        {newsItems.map((item, index) => (
          <a href={item.link} class="group block bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-6 sm:p-8 hover:bg-slate-800 hover:border-slate-600 transition-all duration-300 hover:shadow-xl hover:shadow-red-900/10">
            <div class="flex flex-col sm:flex-row sm:items-start gap-4">
              <!-- Date Badge -->
              <div class="flex-shrink-0">
                <div class="text-xs font-mono text-slate-500 uppercase tracking-wider">
                  {item.date}
                </div>
              </div>
              
              <!-- Content -->
              <div class="flex-grow">
                <div class="flex items-center gap-3 mb-3">
                  <span class={`inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold uppercase tracking-wide
                    ${item.categoryColor === 'red' ? 'bg-red-500/20 text-red-400 border border-red-500/30' : ''}
                    ${item.categoryColor === 'amber' ? 'bg-amber-500/20 text-amber-400 border border-amber-500/30' : ''}
                    ${item.categoryColor === 'blue' ? 'bg-blue-500/20 text-blue-400 border border-blue-500/30' : ''}
                    ${item.categoryColor === 'purple' ? 'bg-purple-500/20 text-purple-400 border border-purple-500/30' : ''}
                    ${item.categoryColor === 'slate' ? 'bg-slate-500/20 text-slate-400 border border-slate-500/30' : ''}
                  `}>
                    {item.category}
                  </span>
                </div>
                <h2 class="text-xl sm:text-2xl font-bold text-white mb-3 group-hover:text-red-400 transition-colors">
                  {item.title}
                </h2>
                <p class="text-slate-400 leading-relaxed">
                  {item.summary}
                </p>
                <div class="mt-4 flex items-center text-red-400 text-sm font-semibold group-hover:text-red-300">
                  Read more
                  <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="mt-16 bg-gradient-to-r from-red-900/50 to-slate-800/50 rounded-3xl p-8 sm:p-12 text-center border border-red-500/20">
        <h2 class="text-2xl sm:text-3xl font-black text-white mb-4">
          Check Your Eligibility
        </h2>
        <p class="text-slate-300 mb-8 max-w-xl mx-auto">
          With reduced allocations in 2026, it's more important than ever to know your BC PNP score and eligibility.
        </p>
        <a href="/bc-pnp-calculator" class="inline-flex items-center bg-red-600 hover:bg-red-500 text-white px-8 py-4 rounded-full font-bold uppercase tracking-widest transition-all shadow-lg shadow-red-900/50 hover:shadow-red-500/30">
          Calculate My Score
          <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </section>
  </main>
</BaseLayout>
