  {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    name: title,
    description: description,
    url: "https://bcpnpcalculator.ca/about",
    mainEntity: {
      "@type": "Organization",
      name: "BC PNP Calculator",
      url: "https://bcpnpcalculator.ca",
      logo: "https://bcpnpcalculator.ca/android-chrome-512x512.png",
      description: "Free BC Provincial Nominee Program points calculator for immigration to British Columbia",
      address: {
        "@type": "PostalAddress",
        addressRegion: "British Columbia",
        addressCountry: "CA",
      },
    },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      { "@type": "ListItem", position: 1, name: "Home", item: "https://bcpnpcalculator.ca" },
      { "@type": "ListItem", position: 2, name: "About", item: "https://bcpnpcalculator.ca/about" },
    ],
  },
];
