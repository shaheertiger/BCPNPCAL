---
import { ui } from "../i18n/ui";

interface Props {
  lang?: string;
}

const { lang = "en" } = Astro.props;
const currentYear = new Date().getFullYear();
const t = ui[lang as keyof typeof ui] || ui.en;

const homeLink = lang === "en" ? "/" : `/${lang}`;
const calculatorLink =
  lang === "en" ? "/bc-pnp-calculator" : `/${lang}/bc-pnp-calculator`;
const drawsLink = lang === "en" ? "/bc-pnp-draws" : `/${lang}/bc-pnp-draws`;
// Note: Article links might be localized or stay English if no translation exists yet.
// For now, we'll keep article links as English except for the prefix if we implement localized routing for them later.
// Assuming localized calculator exists.
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-2 space-y-4">
        <a href={homeLink} class="inline-flex items-center space-x-2 group">
          <div
            class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center text-white font-black text-sm group-hover:bg-red-500 transition-colors"
          >
            BC
          </div>
          <span class="text-xl font-black text-white tracking-tight"
            >PNP Calculator</span
          >
        </a>
        <p class="text-slate-400 text-sm leading-relaxed max-w-sm">
          {t["footer.brand_desc"]}
        </p>
        <div class="flex flex-col gap-3 pt-2">
          <div class="flex items-center gap-2 text-[10px] font-bold text-green-400 uppercase tracking-widest bg-green-400/10 px-3 py-1 rounded-full w-fit">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></span>
            Updated Jan 2026
          </div>
          <div class="flex items-center gap-2 text-[10px] font-bold text-blue-400 uppercase tracking-widest bg-blue-400/10 px-3 py-1 rounded-full w-fit">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Privacy-First Tool
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-4">
          {t["footer.tools_guides"]}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={calculatorLink}
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.calculator"]}
            </a>
          </li>
          <li>
            <a
              href={drawsLink}
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.draws"]}
            </a>
          </li>
          <li>
            <a
              href="/articles/how-to-apply-bc-pnp"
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.apply"]}
            </a>
          </li>
          <li>
            <a
              href="/articles/bc-pnp-processing-times"
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.processing"]}
            </a>
          </li>
          <li>
            <a
              href="/articles/bc-pnp-documents-checklist"
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.checklist"]}
            </a>
          </li>
          <li>
            <a
              href="/news"
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.news"]}
            </a>
          </li>
          <li>
            <a
              href="/articles/ultimate-bc-pnp-guide-2026"
              class="group text-sm text-slate-300 hover:text-white transition-colors flex items-center"
            >
              <span
                class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t["footer.link.guide2026"]}
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal & Sitemap -->
      <div>
        <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-4">
          {t["footer.resources"]}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/guides"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              Guides Hub
            </a>
          </li>
          <li>
            <a
              href="/sitemap"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              {t["footer.sitemap"]}
            </a>
          </li>
          <li>
            <a
              href="/privacy-policy"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              {t["footer.privacy"]}
            </a>
          </li>
          <li>
            <a
              href="/terms"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              {t["footer.terms"]}
            </a>
          </li>
          <li>
            <a
              href="/about"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              About Us
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-sm text-slate-400 hover:text-white transition-colors flex items-center"
            >
              Contact Us
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-12 pt-8 border-t border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-xs text-slate-500">
        &copy; {currentYear} BC PNP Calculator. {t["footer.rights"]}
      </p>
      <p class="text-xs text-slate-600">
        {t["footer.disclaimer"]}
      </p>
    </div>
  </div>
</footer>
